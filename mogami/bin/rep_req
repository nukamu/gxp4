#! /usr/bin/env python

import sys,os
sys.path.append(os.pardir)
import subprocess

import channel
import time


def replication_request(meta_addr, path, new_dest):
    ch = channel.MogamiChanneltoMeta(meta_addr)
    ch.filerep_req(path, new_dest)

if __name__ == '__main__':
    if len(sys.argv) < 3:
        sys.exit("Usage: %s [meta_addr] [path] [new_dest]")

    replication_request(sys.argv[1], sys.argv[2], sys.argv[3])
